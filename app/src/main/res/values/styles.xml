<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="android:windowBackground">@color/background</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowFixedWidthMajor">85%</item>
        <item name="windowFixedWidthMinor">85%</item>
    </style>

    <style name="InputField">
        <item name="met_floatingLabel">normal</item>
        <item name="met_primaryColor">@color/accent</item>
    </style>

    <style name="Heading">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_heading</item>
        <item name="android:textColor">@color/primaryText</item>
    </style>

    <style name="PrimaryButton.Overlay" parent="ThemeOverlay.AppCompat">
        <item name="colorButtonNormal">@color/primaryActionDisabled</item>
        <item name="colorAccent">@color/primaryAction</item>
    </style>

    <style name="PrimaryButton" parent="Base.Widget.AppCompat.Button.Colored">
        <item name="android:theme">@style/PrimaryButton.Overlay</item>
        <item name="android:textColor">@color/md_white_1000</item>
    </style>

    <style name="SecondaryButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/md_light_secondary</item>
    </style>

    <style name="Heading.Book" parent="Heading">
        <item name="android:textSize">@dimen/text_size_book_heading</item>
    </style>

    <style name="BookCard">
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="contentPadding">@dimen/half_standard_margin</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="QuoteCard">
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="contentPadding">@dimen/half_standard_margin</item>
        <item name="cardUseCompatPadding">false</item>
        <item name="cardCornerRadius">0dp</item>
    </style>

    <style name="BookIndicator">
        <item name="android:textColor">@color/md_white_1000</item>
        <item name="android:layout_height">22sp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="QuotesCountIndicator" parent="BookIndicator">
        <item name="android:background">@drawable/quotes_count_indicator_background</item>
        <item name="android:paddingStart">@dimen/half_standard_margin</item>
        <item name="android:paddingEnd">@dimen/half_standard_margin</item>
    </style>

    <style name="TwitterExportIndicator" parent="BookIndicator">
        <item name="android:layout_width">23sp</item>
        <item name="android:background">@drawable/twitter_indicator_background</item>
        <item name="srcCompat">@drawable/ic_twitter</item>
        <item name="android:paddingTop">@dimen/quarter_standard_margin</item>
        <item name="android:paddingBottom">@dimen/quarter_standard_margin</item>
    </style>

    <style name="AppbarElevationView">
        <item name="android:visibility">visible</item>
    </style>

    <style name="CollapsingToolbarCondensedBold">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Toolbar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/icon</item>
    </style>

    <style name="ProfileInfoContent">
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:textSize">@dimen/text_size_info_content</item>
        <item name="android:textIsSelectable">true</item>
    </style>

    <style name="InfoHint">
        <item name="android:layout_marginTop">@dimen/quarter_standard_margin</item>
        <item name="android:textSize">@dimen/text_size_hint</item>
    </style>
</resources>
